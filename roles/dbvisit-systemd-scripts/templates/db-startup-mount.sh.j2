export PATH={{ dbvisit_home }}/standby:$PATH

for i in $(ps -ef | grep pmon | grep -v grep | cut -d_ -f3 | sort)
do
        if [ $(dbvctl -d $i -o status | grep Standby | wc -l) -eq 1 ]
        then
                if [ $(dbvctl -d $i -o status | grep read | wc -l) -eq 1 ]
                        dbvctl -d $i -D stop
                        dbvctl -d $i -o restart
                        dbvctl -d $i -D start
                fi
        fi
done
